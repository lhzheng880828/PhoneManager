<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionbar_height"
                android:background="@drawable/shape_blue"
                android:elevation="@dimen/shape_shadow"
                android:translationZ="@dimen/shape_shadow">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/actionbar_imagesize"
        android:layout_height="@dimen/actionbar_imagesize"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/item_margin"
        android:src="@drawable/actionbar_back"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="通讯大全"
        android:textColor="#fff"
        android:textSize="@dimen/actionbar_textsize"/>

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="@dimen/actionbar_imagesize"
        android:layout_height="@dimen/actionbar_imagesize"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/item_margin"
        android:src="@drawable/actionbar_menu"/>

</RelativeLayout>