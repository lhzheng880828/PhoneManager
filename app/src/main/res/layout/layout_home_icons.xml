<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_telnumber"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_telnumber"
            android:text="电话助手"

            />

        <TextView
            android:id="@+id/tv_software"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_software"
            android:text="软件信息"/>

        <TextView
            android:id="@+id/tv_clean"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_clean"
            android:text="手机清理 "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rocket"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_rocket"
            android:text="手机加速"/>

        <TextView
            android:id="@+id/tv_phone"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_phone"
            android:text="手机状态"/>

        <TextView
            android:id="@+id/tv_file"
            style="@style/HomeIconsSStyle"
            android:drawableTop="@drawable/icon_file"
            android:text="文件管理"/>
    </LinearLayout>

</LinearLayout>
