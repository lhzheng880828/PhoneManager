<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_background_gray"
                android:clickable="true"
                android:paddingBottom="5dp"
                android:paddingEnd="@dimen/item_margin"
                android:paddingStart="@dimen/item_margin"
                android:paddingTop="5dp"
    >

    <CheckBox
        android:id="@+id/cb_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_appicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_toEndOf="@id/cb_delete"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_appicon"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_appname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_weight="7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="QQ"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_appversion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_weight="3"
            android:ellipsize="end"
            android:gravity="right"
            android:maxLines="1"
            android:text="6.0.1"
            android:textSize="12sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_packagename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_appicon"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_toEndOf="@id/iv_appicon"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="10086"
        android:textSize="12sp"/>


</RelativeLayout>
